<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://fonts.googleapis.com/css?family=Sarabun" rel="stylesheet">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="/bootstrapJs/bootstrap.min.js"></script>
  <script src="/socket/socket.io.js"></script>
  <script src="/angular/angular.min.js"></script>
  <script src="/sweetalert/sweetalert.min.js"></script>
  <title>BS Shopping</title>
  <style>
      img{
          width: 350px;
          height: 300px;
          border-radius: 5px;
      }
      @media only screen and (max-width: 410px){
          img{
              width: 250px;
              height: 250px;
          }
      }
      @media only screen and (max-width: 310px){
          img{
              width: 225px;
              height: 225px;
          }
      }
      @media only screen and (max-width: 285px){
          img{
              width: 150px;
              height: 140px;
          }
      }
  </style>
</head>
<body ng-app="app" ng-controller="ctr">
    <% include ../partials/navbar.ejs %>
    <%-billing%>

    <div class="container-product">
        <div class="title-product">
            <span>  สินค้า by: BS Shopping</span>
        </div>
        <br>
        <div class="jumbotron">
            <div class="container">
                <div class="panel-group">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h2>รายการสินค้า</h2>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div ng-repeat="x in product">
                                    <div class="col-md-4">
                                        <img src="/img{{x._id}}">

                                        <div class="caption">
                                            <h3>{{x.name}}</h3>
                                            <p>ราคา : {{x.price}} บาท</p>
                                            <p>คงเหลือ : {{x.inventories}}</p>
                                            <a href="/bill/{{x._id}}" class="btn btn-primary">ซื้อสินค้า</a>
                                            <a href="/detailProduct/{{x._id}}" class="btn btn-success">รายระเอียดสินค้า</a>
                                        </div> <br><br>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script>
        var app = angular.module("app", [])
        app.controller("ctr", function($scope){
            $scope.product = [];
            <%-JSON.stringify(product)%>.forEach(function(result){
                $scope.product.push(result)
            })
        })

    </script>
</body>
</html>
