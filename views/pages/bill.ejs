<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://fonts.googleapis.com/css?family=Sarabun" rel="stylesheet"> 
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="/bootstrapJs/bootstrap.min.js"></script>
  <script src="/socket/socket.io.js"></script>
  <script src="/angular/angular.min.js"></script>
  <title>BS Shopping</title>

  <style>
      img{
          width: 350px;
          height: 300px;
          border-radius: 5px;
          box-shadow: 5px 5px 5px rgba(0, 0, 0, .5);
      }
      @media only screen and (max-width: 410px){
          img{
              width: 250px;
              height: 250px;
          }
      }
      @media only screen and (max-width: 310px){
          img{
              width: 225px;
              height: 225px;
          }
      }
      @media only screen and (max-width: 285px){
          img{
              width: 150px;
              height: 140px;
          }
      }
  </style>
</head>
<body ng-app="app" ng-controller="ctr">
    <% include ../partials/navbar.ejs %>

    <div class="container-product">
        <div class="title-product">
            <span>  สินค้า by: BS Shopping</span>
        </div>
        <br>
        <div class="jumbotron">
            <div class="container">
                <div class="panel-group">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h2>สั่งซื้อสินค้า</h2>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <img src="/img<%=bill._id%>">
                                    <br><br>
                                    <div class="caption"  style="border:1px solid rgb(85, 255, 85); padding: 5px 20px; background: rgb(250, 250, 250);box-shadow: 2px 2px 3px rgba(0, 0, 0, 0.4)">
                                        <h2> &nbsp;&nbsp;<b><%=bill.name%></b></h2>
                                        <p> &nbsp; &nbsp;<b>ราคา : <%=bill.price%> บาท</b></p>
                                        <p> &nbsp; &nbsp;<b>คงเหลือ : <%=bill.inventories%></b></p>
                                    </div> <br>
                                </div>
                                <div class=" col-md-5">
                                    <form action="/billConfirm/<%=bill.name%>" method="POST">
                                        <h3>จำนวนสินค้า</h3>
                                        <input type="text" ng-model="num" name="num" class="form-control" style="width: 30%"> <br>
                                        <label class="comment">{{num*<%=bill.price%>}} บาท</label><br>
                                        <h3>จุดส่งสินค้า</h3>
                                        <textarea class="form-control" name="send" row="5"></textarea> <br>
                                        <h3>ชื่อของคุณ</h3>
                                        <input type="text" class="form-control" value="<%=nickname%>" name="user" style="width: 70%"> <br>
                                        <h3>เบอร์โทรติดต่อ</h3>
                                        <input type="text" class="form-control" value="<%=tell%>" name="tell" style="width: 50%"> <br>
                                        <h3>หรือ</h3> <br>
                                        <h3>Facebook</h3>
                                        <input type="text" class="form-control" value="<%=facebook%>" name="facebook" style="width: 70%">
                                        <br><br>
                                        <input type="submit" value="สั่งซื้อ" class="btn btn-success btn-block">
                                    </form>
                                    <br><br><br>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script>
        var app = angular.module("app", [])
        app.controller("ctr", function($scope){
            $scope.num = 1
        })

    </script>
</body>
</html>
